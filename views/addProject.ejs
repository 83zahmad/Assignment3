<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Project</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar', {page: '/addProject'}) %>
    <br>
    <div class="container mx-auto">
        <div class="hero bg-base-200 rounded-lg p-6">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-7xl font-bold">Add Project</h1>
                    <p class="py-6">Please Add a Project Below</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <h2 class="card-title">Add a New Project</h2>
            <form method="post" action="/solutions/addProject" enctype="application/x-www-form-urlencoded">
                <label for="title">Title:</label><br/>
                <input type="text" id="title" name="title" required class="w-full border rounded p-2"/><br/>
                
                <label for="feature_img_url">Feature Image URL:</label><br/>
                <input type="url" id="feature_img_url" name="feature_img_url" required class="w-full border rounded p-2"/><br/>
                
                <label for="sector_id">Sector:</label><br/>
                <select id="sector_id" name="sector_id" required class="w-full border rounded p-2">
                    <% sectors.forEach(sector => { %>
                        <option value="<%= sector.id %>">
                            <%= sector.sector_name %>
                        </option>
                    <% }) %>
                </select><br/>
                
                <label for="intro_short">Short Introduction:</label><br/>
                <textarea id="intro_short" name="intro_short" required class="w-full border rounded p-2"></textarea><br/>
                
                <label for="summary_short">Short Summary:</label><br/>
                <textarea id="summary_short" name="summary_short" required class="w-full border rounded p-2"></textarea><br/>
                
                <label for="impact">Impact:</label><br/>
                <textarea id="impact" name="impact" required class="w-full border rounded p-2"></textarea><br/>
                
                <label for="original_source_url">Original Source URL:</label><br/>
                <input type="url" id="original_source_url" name="original_source_url" required class="w-full border rounded p-2"/><br/>
                
                <button type="submit" class="btn btn-success mt-6">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>
